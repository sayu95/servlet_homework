<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.mapper.MemberMapper">
	<select id="selectMemberForAuth" parameterType="String" resultType="MemberDTO">
      SELECT
         MEM_ID,
         MEM_PASS,
         MEM_NAME,
         MEM_MAIL,
         MEM_DELETE,
         MEM_ROLE
      FROM
         MEMBER
      WHERE MEM_ID = #{memId} AND MEM_DELETE IS NULL
   </select>
</mapper>